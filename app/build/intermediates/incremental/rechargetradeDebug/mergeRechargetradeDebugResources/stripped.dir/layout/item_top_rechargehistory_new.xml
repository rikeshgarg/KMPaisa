<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lyt_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@drawable/bg_cardview_history"
    android:orientation="vertical">

    <RelativeLayout
        android:padding="@dimen/dp_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:padding="@dimen/two">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_recharge"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_70"
                app:cardBackgroundColor="@color/background"
                android:layout_margin="@dimen/three"
                app:cardCornerRadius="@dimen/thirtyfive"
                app:cardElevation="0dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:background="@drawable/bg_circle_white"
                    app:cardCornerRadius="@dimen/thirtyfive"
                    android:layout_gravity="center"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/iv_operator"
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:layout_gravity="center"
                        android:padding="@dimen/dp_5"
                        android:src="@drawable/bbps_bill" />
                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <TextView
            android:layout_toRightOf="@+id/ll_img"
            android:id="@+id/tv_recharge_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile Recharge"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/sp_15"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textStyle="bold"
            android:layout_gravity="left">
        </TextView>
        <LinearLayout
            android:id="@+id/ll_details"
            android:layout_toRightOf="@+id/ll_img"
            android:layout_toLeftOf="@+id/ll_right"
            android:orientation="vertical"
            android:padding="@dimen/dp_5"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:layout_marginTop="@dimen/fifteen"
                android:id="@+id/mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text=""
                android:textSize="@dimen/sp_14"></TextView>

            <TextView
                android:visibility="gone"
                android:id="@+id/txtmember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text=""
                android:textSize="@dimen/sp_14"></TextView>

            <TextView
                android:id="@+id/txtId"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456"
                android:textSize="@dimen/sp_14"
                >
            </TextView>

            <TextView
                android:id="@+id/after_balance"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456"
                android:textSize="@dimen/sp_14"
                >
            </TextView>

            <TextView
                android:id="@+id/before_balance"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456"
                android:textSize="@dimen/sp_14"
                >
            </TextView>

            <TextView
                android:layout_marginTop="@dimen/dp_5"
                android:id="@+id/vm_name"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456"
                android:textSize="@dimen/sp_14">
            </TextView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_right"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:padding="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_2"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_3"
                    android:text="@string/currency_symbol"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/vm_memberid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:visibility="invisible"
                android:textSize="@dimen/sp_14"
                >
            </TextView>

            <TextView
                android:gravity="right"
                android:id="@+id/vm_wallbal"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456"
                android:layout_marginTop="@dimen/dp_19"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14">
            </TextView>

        </LinearLayout>





    </RelativeLayout>
    <LinearLayout
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_complain"
            android:layout_width="@dimen/onehundredfifty"
            android:layout_height="@dimen/forty"
            android:layout_gravity="right"
            android:text="Raise Compalint"
            android:background="@drawable/btn_rect_primary"
            android:textColor="@color/white"
            android:textSize="@dimen/ts_twelve"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
