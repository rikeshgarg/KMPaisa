<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mylayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:visibility="visible">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:scrollingCache="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/layoutLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">

                    <EditText
                        android:id="@+id/mobile_num"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/fortyfive"
                        android:background="@drawable/back_edittext_default"
                        android:layout_marginTop="@dimen/ten"
                        android:hint="Mobile number"
                        android:inputType="phone"
                        android:paddingLeft="@dimen/fifteen"
                        android:singleLine="true"
                        android:textColor="@color/c_black"
                        android:textColorHighlight="@color/white"
                        android:textColorHint="@color/c_gray2"
                        android:textSize="@dimen/ts_seventeen" />

                    <EditText
                        android:id="@+id/banefeciary_name"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/fortyfive"
                        android:background="@drawable/back_edittext_default"
                        android:layout_marginTop="@dimen/ten"
                        android:hint="Benefeciary name"
                        android:inputType="text"
                        android:paddingLeft="@dimen/fifteen"
                        android:singleLine="true"
                        android:textColor="@color/c_black"
                        android:textColorHighlight="@color/white"
                        android:textColorHint="@color/c_gray2"
                        android:textSize="@dimen/ts_seventeen" />

                    <EditText
                        android:id="@+id/accountnumber"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/fortyfive"
                        android:background="@drawable/back_edittext_default"
                        android:layout_marginTop="@dimen/ten"
                        android:hint="Account number"
                        android:inputType="number"
                        android:paddingLeft="@dimen/fifteen"
                        android:singleLine="true"
                        android:textColor="@color/c_black"
                        android:textColorHighlight="@color/white"
                        android:textColorHint="@color/c_gray2"
                        android:textSize="@dimen/ts_seventeen" />

                    <EditText
                        android:id="@+id/reaccountnumber"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/fortyfive"
                        android:background="@drawable/back_edittext_default"
                        android:layout_marginTop="@dimen/ten"
                        android:hint="Re-enter Account number"
                        android:inputType="number"
                        android:paddingLeft="@dimen/fifteen"
                        android:singleLine="true"
                        android:textColor="@color/c_black"
                        android:textColorHighlight="@color/white"
                        android:textColorHint="@color/c_gray2"
                        android:textSize="@dimen/ts_seventeen" />

                    <EditText
                        android:id="@+id/ifsccode"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/fortyfive"
                        android:background="@drawable/back_edittext_default"
                        android:layout_marginTop="@dimen/ten"
                        android:hint="IFSC Code"
                        android:inputType="text"
                        android:paddingLeft="@dimen/fifteen"
                        android:singleLine="true"
                        android:textColor="@color/c_black"
                        android:textColorHighlight="@color/white"
                        android:textColorHint="@color/c_gray2"
                        android:textSize="@dimen/ts_seventeen" />

                    <EditText
                        android:id="@+id/transferAmount"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/fortyfive"
                        android:background="@drawable/back_edittext_default"
                        android:layout_marginTop="@dimen/ten"
                        android:hint="Amount(INR)"
                        android:inputType="number"
                        android:paddingLeft="@dimen/fifteen"
                        android:singleLine="true"
                        android:textColor="@color/c_black"
                        android:textColorHighlight="@color/white"
                        android:textColorHint="@color/c_gray2"
                        android:textSize="@dimen/ts_seventeen" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="3.0dip"
                        android:foregroundGravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <Button
                            android:id="@+id/btn_proceed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/ten"
                            android:layout_marginBottom="@dimen/ten"
                            android:background="@drawable/blue_button_background"
                            android:gravity="center"
                            android:paddingLeft="@dimen/thirty"
                            android:paddingRight="@dimen/thirty"
                            android:text="Preceed To Recharge"
                            android:textColor="#ffffffff"/>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:layout_marginBottom="15dp"
                android:visibility="gone"
                app:cardBackgroundColor="#a00da5e9"
                app:cardCornerRadius="15dp"
                app:cardElevation="9dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="@dimen/ts_fifteen"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.45">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:background="#ffffff"
                        android:foregroundGravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.64">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="4dp"
                            android:background="@drawable/forget"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:text="Enter Your OTP!"
                            android:textColor="@color/colorPrimary" />

                        <com.chaos.view.PinView
                            android:id="@+id/edt_otp"
                            style="@style/PinWidget.PinView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:cursorVisible="true"
                            android:drawableTint="@color/colorPrimary"
                            android:elevation="1dp"
                            android:hint="OTP"
                            android:inputType="number"
                            android:padding="4dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="9dp"
                            android:paddingBottom="9dp"
                            android:singleLine="true"
                            android:textColor="@color/c_black"
                            android:textColorHighlight="@color/white"
                            android:textColorHint="@color/c_gray2"
                            android:textSize="17dp"
                            android:textStyle="bold"
                            app:cursorColor="@color/them_color"
                            app:cursorWidth="2dp"
                            app:hideLineWhenFilled="true"
                            app:itemCount="6"
                            app:itemHeight="48dp"
                            app:itemRadius="4dp"
                            app:itemSpacing="0dp"
                            app:itemWidth="48dp"
                            app:lineColor="@color/them_color"
                            app:lineWidth="2dp"
                            app:viewType="rectangle" />

                        <Button
                            android:id="@+id/btn_otpauth"
                            android:layout_width="100dp"
                            android:layout_height="@dimen/fortyfive"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/blue_button_background"
                            android:backgroundTint="@color/them_color"

                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:text="Send"
                            android:textColor="#ffffffff" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>