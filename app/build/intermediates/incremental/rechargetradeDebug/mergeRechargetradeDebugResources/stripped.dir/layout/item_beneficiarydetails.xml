<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lyt_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/five"
        android:visibility="visible"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/lay_head_change"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/ten">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/two"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_weight="4"
                        android:text="Name"
                        android:textColor="@color/fontcolortextview"
                        android:textSize="@dimen/ts_forteen"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_weight="6"
                        android:textColor="@color/fontcolortextview"
                        android:textSize="@dimen/ts_twelve"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/two"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_weight="4"
                        android:text="Account no"
                        android:textColor="@color/fontcolortextview"
                        android:textSize="@dimen/ts_forteen"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_accntno"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_weight="6"
                        android:textColor="@color/fontcolortextview"
                        android:textSize="@dimen/ts_twelve"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/two"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_weight="4"
                        android:text="IFSC"
                        android:textColor="@color/fontcolortextview"
                        android:textSize="@dimen/ts_forteen"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_ifsc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_weight="6"
                        android:textColor="@color/fontcolortextview"
                        android:textSize="@dimen/ts_twelve"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/two"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_weight="4"
                        android:text="Bank Name"
                        android:textColor="@color/fontcolortextview"
                        android:textSize="@dimen/ts_forteen"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_bnkname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_weight="6"
                        android:textColor="@color/fontcolortextview"
                        android:textSize="@dimen/ts_twelve"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/two"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_weight="4"
                        android:text="Mobile no"
                        android:textColor="@color/fontcolortextview"
                        android:textSize="@dimen/ts_forteen"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_ben_mob"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_weight="6"
                        android:textColor="@color/fontcolortextview"
                        android:textSize="@dimen/ts_twelve"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/two"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_weight="4"
                        android:text="Status"
                        android:textColor="@color/fontcolortextview"
                        android:textSize="@dimen/ts_forteen"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_acc_status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_weight="6"
                        android:textColor="@color/fontcolortextview"
                        android:textSize="@dimen/ts_twelve"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/two"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_weight="4"
                        android:text="OTP Verified"
                        android:textColor="@color/fontcolortextview"
                        android:textSize="@dimen/ts_forteen"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_otp_verify"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_weight="6"
                        android:textColor="@color/fontcolortextview"
                        android:textSize="@dimen/ts_twelve"
                        android:textStyle="bold" />
                </LinearLayout>


                <Button
                    android:id="@+id/btn_transfer_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:maxLines="1"
                    android:text="Tranfer Now"
                    android:textColor="@color/c_white"
                    android:textSize="@dimen/ts_twelve" />


            </LinearLayout>

            <ImageView
                android:id="@+id/img_delete"
                android:layout_width="@dimen/thirty"
                android:layout_height="@dimen/thirty"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/ten"
                android:layout_marginEnd="@dimen/ten"
                android:padding="@dimen/three"
                android:src="@drawable/ic_delete"
                app:tint="@color/red_500" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
