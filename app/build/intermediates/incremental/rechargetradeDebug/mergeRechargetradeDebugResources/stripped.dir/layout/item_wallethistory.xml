<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lyt_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:background="@color/white"
        app:cardCornerRadius="12dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/seven">

            <RelativeLayout
                android:id="@+id/lay_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/ten"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_left"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/openbal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/two"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Opening Balance: "
                            android:textColor="@color/black"
                            android:textSize="@dimen/ts_forteen"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/openingbalance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/two"
                            android:maxLines="1"
                            android:text="487059"
                            android:textColor="@color/black"
                            android:textSize="@dimen/ts_forteen"
                            android:textStyle="italic" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/two"
                        android:layout_marginBottom="@dimen/two"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Closing Balance: "
                            android:textColor="@color/black"
                            android:textSize="@dimen/ts_forteen"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/closingbalance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/two"
                            android:maxLines="1"
                            android:text="458690"
                            android:textColor="@color/black"
                            android:textSize="@dimen/ts_forteen"
                            android:textStyle="italic" />
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_toLeftOf="@+id/ll_right"
                    android:visibility="visible"
                    android:id="@+id/view_color"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_width="@dimen/eight"
                    android:src="@drawable/iv_line"
                    android:layout_height="70dp"
                    android:layout_centerInParent="true"/>


                <LinearLayout
                    android:id="@+id/ll_right"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/vm_memberid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:text="1000"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="@dimen/ts_seventeen" />


                    <TextView
                        android:layout_below="@+id/ll_desc"
                        android:id="@+id/vm_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="datetime"
                        android:gravity="right"
                        android:textColor="@color/black"
                        android:textSize="@dimen/ts_forteen"
                        android:textStyle="italic" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_color"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:background="#D32F2F">

                <LinearLayout
                    android:layout_centerInParent="true"
                    android:id="@+id/ll_desc"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description:"
                        android:textColor="@color/white"
                        android:textSize="@dimen/ts_forteen"
                        android:visibility="gone"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/rechargedesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/four"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_13"
                        android:textStyle="italic" />
                </LinearLayout>


            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>