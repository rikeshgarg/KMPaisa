<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="@dimen/seventyfive"
    android:padding="@dimen/four"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/seventyfive"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/seven"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/fiftyfive"
            android:layout_height="@dimen/fiftyfive"
            android:layout_centerInParent="true"
            app:cardBackgroundColor="#EEF1FD"
            android:layout_margin="@dimen/three"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="@dimen/thirtyfive"
            app:cardElevation="0dp">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animationView"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:layout_gravity="center"
                android:padding="@dimen/two"
                android:layout_width="@dimen/fifty"
                android:layout_height="@dimen/fifty"/>

        </androidx.cardview.widget.CardView>

        <me.grantland.widget.AutofitTextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:maxLines="1"
            android:minLines="1"
            android:text="Upgrade"
            android:textColor="@color/black"
            android:textSize="@dimen/ts_twelve" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_tickcross"
        android:layout_width="@dimen/twentyfive"
        android:layout_alignParentRight="true"
        android:src="@drawable/tick_cross"
        android:layout_height="@dimen/twentyfive"/>
</RelativeLayout>