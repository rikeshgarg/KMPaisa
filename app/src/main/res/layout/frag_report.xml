<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mylayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:visibility="visible">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:scrollingCache="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twelve"
                android:layout_marginRight="@dimen/twelve"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/two"
                    app:cardCornerRadius="@dimen/card_item_corner"
                    app:cardElevation="@dimen/four">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/five">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <me.grantland.widget.AutofitTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="SUCCESS"
                                android:textColor="@color/green_900"
                                android:textSize="@dimen/ts_seventeen" />

                            <me.grantland.widget.AutofitTextView
                                android:id="@+id/total_success"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="Rs 0/-"
                                android:textColor="@color/green_900"
                                android:textSize="@dimen/ts_fifteen" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <me.grantland.widget.AutofitTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="PENDING"
                                android:textColor="@color/yellow_900"
                                android:textSize="@dimen/ts_seventeen" />

                            <me.grantland.widget.AutofitTextView
                                android:id="@+id/total_pending"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="Rs 0/-"
                                android:textColor="@color/yellow_900"
                                android:textSize="@dimen/ts_fifteen" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <me.grantland.widget.AutofitTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="FAILED"
                                android:textColor="@color/red_900"
                                android:textSize="@dimen/ts_seventeen" />

                            <me.grantland.widget.AutofitTextView
                                android:id="@+id/total_failed"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="Rs 0"
                                android:textColor="@color/red_900"
                                android:textSize="@dimen/ts_fifteen" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twelve"
                android:layout_marginTop="@dimen/twelve"
                android:layout_marginRight="@dimen/twelve"
                android:layout_marginBottom="@dimen/seven"
                android:background="@drawable/back_dash_menuone"
                android:elevation="@dimen/card_item_elevation">

                <LinearLayout
                    android:layout_margin="@dimen/dp_4"
                    android:background="@drawable/back_dash_menuone_inner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/five"
                        android:foregroundGravity="center|left"
                        android:gravity="left"
                        android:padding="@dimen/seven"
                        android:text="Reports"
                        android:textColor="@color/eighty_colorPrimaryDark"
                        android:textSize="@dimen/ts_fifteen"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_dash_reports"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:spanCount="4"
                        tools:itemCount="3"
                        tools:listitem="@layout/item_dashboard" />
                </LinearLayout>
            </FrameLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_addwallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/twelve"
                android:layout_marginTop="@dimen/twelve"
                android:layout_marginRight="@dimen/twelve"
                android:layout_marginBottom="@dimen/seven"
                android:visibility="visible"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/c_white"
                app:cardCornerRadius="@dimen/fifteen">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="@dimen/ten">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Today Income"
                            android:textColor="@color/eighty_colorPrimaryDark"
                            android:textSize="@dimen/ts_eighteen"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/today_bal_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/four"
                            android:textColor="@color/eighty_colorPrimaryDark"
                            android:textSize="@dimen/ts_seventeen"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="@dimen/ten">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Income"
                            android:textColor="@color/eighty_colorPrimaryDark"
                            android:textSize="@dimen/ts_eighteen"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/total_bal_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/four"
                            android:textColor="@color/eighty_colorPrimaryDark"
                            android:textSize="@dimen/ts_seventeen"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twelve"
                android:layout_marginTop="@dimen/twelve"
                android:layout_marginRight="@dimen/twelve"
                android:layout_marginBottom="@dimen/seven"
                android:background="@drawable/back_dash_menuone"
                android:elevation="@dimen/card_item_elevation">

                <LinearLayout
                    android:layout_margin="@dimen/dp_4"
                    android:background="@drawable/back_dash_menuone_inner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/five"
                        android:foregroundGravity="center|left"
                        android:gravity="left"
                        android:padding="@dimen/seven"
                        android:text="Income"
                        android:textColor="@color/eighty_colorPrimaryDark"
                        android:textSize="@dimen/ts_fifteen"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_dash_income"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:spanCount="4"
                        tools:itemCount="3"
                        tools:listitem="@layout/item_dashboard" />
                </LinearLayout>
            </FrameLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>