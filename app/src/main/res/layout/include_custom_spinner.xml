<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardElevation="@dimen/five"
    android:layout_margin="@dimen/four"
    app:cardBackgroundColor="#053c5029"
    app:cardCornerRadius="@dimen/dp_10"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back_edittext_default"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="@dimen/ten"
        android:paddingEnd="@dimen/five">

        <TextView
            android:id="@+id/tv_spinner"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_toStartOf="@+id/img_drop"
            android:gravity="center_vertical"
            android:text="Select "
            android:textColor="@color/grey_60"
            android:textSize="@dimen/ts_seventeen" />

        <ImageView
            android:id="@+id/img_drop"
            android:layout_width="@dimen/twentyfive"
            android:layout_height="42dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_arrow_drop"
            app:tint="@color/grey_60" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>